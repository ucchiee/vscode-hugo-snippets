{
  "hugo-figure": {
    "prefix": "h-figure",
    "body": ["{{< figure src=\"${1:imageUrl}\" alt=\"${2:Description}\" >}}"],
    "description": "Figure Shortcode"
  },
  "hugo-gist": {
    "prefix": "h-gist",
    "body": ["{{< gist ${1:username} ${2:gistId} >}}"],
    "description": "Gist Shortcode"
  },
  "hugo-highlight": {
    "prefix": "h-highlight",
    "body": [
      "{{< highlight ${1|html,java,javascript,markdown,scss,typescript,terminal,toml,xml|} >}}",
      "$0",
      "{{< /highlight >}}"
    ],
    "description": "Highlight Shortcode"
  },
  "hugo-instagram": {
    "prefix": "h-instagram",
    "body": ["{{< instagram ${1:photoId} >}}"],
    "description": "Instagram Shortcode"
  },
  "hugo-shortcode": {
    "prefix": "h-shortcode",
    "body": ["{{< ${1:shortcode} >}}"],
    "description": "Shortcode Template"
  },
  "hugo-shortcode-param": {
    "prefix": "h-shortcode-param",
    "body": ["{{< ${1:shortcode} ${2:param} >}}"],
    "description": "Shortcode Template w/ param"
  },
  "hugo-ref": {
    "prefix": "h-ref",
    "body": ["[${1:Text}]({{< ref \"${2:pageName}.md\" >}})"],
    "description": "Ref Shortcode"
  },
  "hugo-tweet": {
    "prefix": "h-tweet",
    "body": ["{{< tweet ${1:tweetId} >}}"],
    "description": "Tweet Shortcode"
  },
  "hugo-vimeo": {
    "prefix": "h-vimeo",
    "body": ["{{< vimeo ${1:videoId} >}}"],
    "description": "Vimeo Shortcode"
  },
  "hugo-youtube": {
    "prefix": "h-youtube",
    "body": ["{{< youtube ${1:videoId} >}}"],
    "description": "Youtube Shortcode"
  },
  "hugo-katex": {
    "prefix": "h-katex",
    "body": ["{{< katex >}} ${1:math} {{< /katex >}}"],
    "description": "Katex Template"
  },
  "hugo-katex-display": {
    "prefix": "h-katex-display",
    "body": ["{{< katex display >}} ${1:math} {{< /katex >}}"],
    "description": "Katex Template (display)"
  },
  "hugo-hint": {
    "prefix": "h-hint",
    "body": [
      "{{< hint ${1:[info|warning|danger]} >}}",
      "${2:md contents}",
      "{{< /hint >}}"
    ],
    "description": "Hint Shortcode"
  },
  "hugo-hint": {
    "prefix": "h-details",
    "body": [
      "{{< details \"${1:Title}\" ${2:[open]} >}}",
      "${3:md contents}",
      "{{< /details >}}"
    ],
    "description": "Details Shortcode"
  },
  "hugo-tabs": {
    "prefix": "h-tabs",
    "body": [
      "{{< tabs \"${1:uniqueid}\" >}}",
      "{{< tab \"${2:tab name}\" >}} ${3:tab contents} {{< /tab >}}",
      "{{< /tabs >}}"
    ],
    "description": "Details Shortcode"
  },
  "hugo-columns": {
    "prefix": "h-columns",
    "body": [
      "{{< columns >}}",
      "${1:markdown contents}",
      "<--->",
      "${2:markdown contents}",
      "{{< /columns >}}"
    ],
    "description": "Columns Shortcode"
  },
  "hugo-mermaid": {
    "prefix": "h-mermaid",
    "body": [
      "{{< mermaid >}}",
      "${1:mermaid contents}",
      "{{< /mermaid >}}"
    ],
    "description": "Mermaid Shortcode"
  }
}
